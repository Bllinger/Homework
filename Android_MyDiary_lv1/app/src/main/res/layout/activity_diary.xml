<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diary_fab"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ok"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diary_fab_add"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="17dp"
        android:src="@drawable/diary_add"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Diary"
            android:gravity="center"
            android:textSize="23dp"
            android:textColor="@color/color_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_text"></View>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/diary_sv">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_text"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/diary_month_text"
                        android:text="Month"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/White"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/diary_day_text"
                        android:text="Day"
                        android:layout_gravity="center"
                        android:textSize="32sp"
                        android:textColor="@color/White"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/diary_week_text"
                        android:text="Week"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/White"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/diary_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="请输入标题"
                    android:layout_margin="12dp"
                    android:gravity="bottom"
                    android:background="@null"
                    android:textColor="@color/colorAccent"
                    android:maxLines="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_text"/>
                <com.example.dell.mydiary.Other.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/diary_content"
                    android:background="@null"
                    android:text="content"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"/>
            </LinearLayout>

        </ScrollView>



    </LinearLayout>
</FrameLayout>